@model X.PagedList.IPagedList<OcorrenciasDP.Models.Ocorrencia>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Relatório";
}

<link href="/css/PagedList.css" rel="stylesheet" type="text/css" />



<h2>Relatório</h2>
<br />
<form class="form-inline">
    <div class="form-group mb-2">
        <label for="datainicio">Data Início</label>
        <input type="date" name="datainicio" class="form-control-plaintext" id="datainicio" value="">
    </div>
    <div class="form-group mb-2">
        <label for="datafim">Data Fim</label>
        <input type="date" name="datafim" class="form-control-plaintext" id="datafim" value="">
    </div>
    <div class="form-group p-2">
        <label for="setor">Setor</label>
        <select name="setor" id="setor" class="form-control mb-2">
            <option>Setor 1</option>
            <option>Setor 2</option>
            <option>Setor 3</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>
<div style=" display: flex;justify-content:flex-end">
    <strong>Total de Resultados: </strong> 000
</div>
<div>
    <br />
</div>

<span><b>Total de Registros:</b> @Model.TotalItemCount</span>
<table class="table table-hover" style="padding-top: 15px">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Data</th>
            <th scope="col">Descrição</th>
            <th scope="col">Usuario</th>
            <th scope="col">Setor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ocor in Model)
        {
        <tr>
            <th scope="row">@ocor.Id</th>
            <td>@ocor.Data.Date.ToString("dd/MM/yyyy")</td>
            @if (ocor.Descricao.Length >= 20)
            {
                <td>@ocor.Descricao.Substring(0, 20)</td>
            }
            else
            {
                <td>@ocor.Descricao</td>
            }

            <td>@ocor.Usuario.Nome</td>
            <td>@ocor.Usuario.Setor</td>
        </tr>
        }
    </tbody>
</table>


@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))