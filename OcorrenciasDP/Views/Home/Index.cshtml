
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="container" id="tela_login">
        <h1>Efetue o seu login</h1> <br />
        <form method="post" action="/home/index">
            <div class="form-group">
                <label for="login"><strong>Login</strong></label>
                <input type="text" name="login" class="form-control" id="login" placeholder="Insira seu Login">
                @Html.ValidationMessage("login") <br />
            </div>

            <div class="form-group">
                <label for="senha"><strong>Senha</strong></label>
                <input type="password" name="senha" class="form-control" id="senha" placeholder="Insira sua Senha">
                @Html.ValidationMessage("senha") <br />
            </div>

            <button type="submit" class="btn btn-lg btn-primary">Entrar</button>
            @*<button type="button" class="btn btn-secondary btn-lg" disabled>Cancelar</button>*@
        </form>
        <br />
        @ViewBag.Mensagem
    </div>
</body>
</html>
