
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<h1>Efetue o seu login</h1> <br />
<form method="post" action="/OcorrenciasDP/home/index">
    <div class="form-group">
        <label for="login"><strong>Login</strong></label>
        <input type="text" name="login" class="form-control" id="login" placeholder="Insira seu Login">
        @Html.ValidationMessage("login") <br />
    </div>

    <div class="form-group">
        <label for="senha"><strong>Senha</strong></label>
        <input type="password" name="senha" class="form-control" id="senha" placeholder="Insira sua Senha">
        @Html.ValidationMessage("senha") <br />
    </div>

    <button type="submit" class="btn btn-lg btn-primary">Entrar</button>

</form>

<br />

