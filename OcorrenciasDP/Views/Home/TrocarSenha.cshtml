@model OcorrenciasDP.Models.ValidacaoSenha
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
}
@{
    ViewData["Title"] = "Trocar Senha";
}

@if (TempData["TrocaSenhaNotOK"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["TrocaSenhaNotOK"]
    </div>
}

<h2>Trocar Senha</h2>
<br />

<br />
<form method="post" action="/OcorrenciasDP/Home/TrocarSenha" style="width:50%">

    <input type="hidden" name="id" value="@ViewBag.IdSenha" />

    <!--Nome-->
    <div class="form-group col-md-auto">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" value="@ViewBag.Nome" disabled />
        <input type="hidden" name="nome" id="nome" value="@ViewBag.Nome"  />

    </div>
    @Html.ValidationMessage("nome")

    <!--Email-->
    <div class="form-group col-md-auto">
        <label for="email">E-mail</label>
        <input type="text" class="form-control" value="@ViewBag.Email"  disabled />
        <input type="hidden" name="email" id="email" value="@ViewBag.Email"  />
    </div>
    @Html.ValidationMessage("email")

    <!--Senha-->

    <div class="form-group col-md-auto">
        <label for="senha">Senha</label>

        <input type="password" name="senha" class="form-control" id="senha" value="@ViewBag.Senha" placeholder="" required>

    </div>
    @Html.ValidationMessage("senha")

    <!--Confirmar Senha-->
    <div class="form-group col-md-auto">
        <label for="confirmasenha">Confime a Senha</label>
        <input type="password" name="confirmasenha" class="form-control" id="confirmasenha" value="" onkeydown="return document.getElementById('conferencia').hidden = true; " required>
    </div>

    @if (@TempData["SenhaNaoConfere"] != null)
    {
       
        <div>
            <b id="conferencia" style="color:red">@TempData["SenhaNaoConfere"]  </b>
        </div>

        <br />
    }

    <button type="submit" class="btn btn-primary" id="botaoenviar">Enviar</button>

</form>
